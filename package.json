{
  "name": "online-xox-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && pnpm install",
    "install:frontend": "cd frontend && pnpm install",
    "install:all": "pnpm run install:backend && pnpm run install:frontend",
    "dev:backend": "cd backend && pnpm run dev",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "start:backend": "cd backend && pnpm start",
    "build:frontend": "cd frontend && pnpm run build",
    "build": "pnpm run build:frontend"
  },
  "description": "Online Tic-Tac-Toe game with Next.js frontend and Socket.IO backend",
  "keywords": [
    "tic-tac-toe",
    "multiplayer",
    "socket.io",
    "nextjs",
    "game"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MrArrogant2002/Online-tictoctoe"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}